<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iced.mystore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyStore">
        <activity android:name=".Activity.UpdateProductActivity"></activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/AD_APP_ID" />

        <activity android:name=".Activity.ViewOrderActivity" />
        <activity android:name=".Activity.AccountingActivity" />
        <activity android:name=".Activity.RestockActivity" />
        <activity android:name=".Activity.NewOrderActivity" />
        <activity android:name=".Activity.NewProductActivity" />
        <activity android:name=".Activity.DashboardActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>