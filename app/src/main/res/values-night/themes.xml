<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.MyStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorPrimaryDark">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="titleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="titleTextColor">@color/purple_500</item>
    </style>

    <style name="bodyStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="subtitleStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="header1Style" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="header2STyle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="commonTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="commonTextInputLayout.DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="commonCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/stroke_color</item>
    </style>

    <style name="commonCardView.ChildLayout">
        <item name="android:padding">16dp</item>
    </style>

    <style name="commonCardView.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="commonCardView.Subtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="commonCardView.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="commonCardView.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="commonRecyclerView">
        <item name="android:overScrollMode">never</item>
        <item name="android:nestedScrollingEnabled">true</item>
    </style>

    <style name="commonButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <style name="commonButton.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="commonButton.SideIconButton" parent="Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commonButton.Unelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commonButton.Variant1" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commonListTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commonListSubtitleStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="commonIconOnlyButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconTint">@color/gray</item>
        <item name="cornerRadius">36dp</item>
    </style>

    <style name="commonBottomSheet">
        <item name="behavior_hideable">true</item>
        <item name="state_collapsed">true</item>
    </style>

    <style name="commonBottomSheet.Variant1" parent="commonBottomSheet">
        <item name="behavior_peekHeight">16dp</item>
    </style>

</resources>