<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_image"
    android:layout_margin="5dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">
    <TextView
        android:id="@+id/restock_adapter_txtv_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:textAppearance="@style/subtitleStyleV2"
        android:gravity="right"
        android:text="15 pieces"/>



   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <LinearLayout
           android:id="@+id/layout_ad_res"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginRight="50dp"
           android:layout_alignParentStart="true"
           android:orientation="horizontal">

           <Button
               android:id="@+id/restock_adapter_disabled_btn"
               style="@style/commonIconOnlyButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="8dp"
               android:enabled="false"
               android:text=""
               app:icon="@drawable/ic_shop_restock"
               app:iconSize="36dp"
               app:iconTint="@color/purpBlue" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/restock_adapter_txtv_prod_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Product 1"
                   android:textAppearance="@style/header2STyle"
                   android:textColor="@color/purpBlue" />

               <TextView
                   android:id="@+id/restock_adapter_txtv_cost"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="$240.50"
                   android:textAppearance="@style/subtitleStyleV2"
                   android:textColor="@color/matteBlack"
                   android:textSize="14sp" />
           </LinearLayout>

       </LinearLayout>

       <Button
           android:id="@+id/restock_adapter_btn_close"
           style="@style/commonIconOnlyButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_marginStart="308dp"
           android:layout_alignParentEnd="true"
           android:text=""
           app:icon="@drawable/ic_close"
           app:iconTint="@color/purpBlue" />
   </RelativeLayout>



</LinearLayout>