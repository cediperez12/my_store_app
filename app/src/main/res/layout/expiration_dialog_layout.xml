<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/purpBlue"
    android:padding="16dp">

    <TextView
        android:id="@+id/expiration_dialog_txtv_prodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/header2STyle"
        android:textColor="@color/white"
        android:text="Product"/>

    <TextView
        android:id="@+id/expiration_dialog_txtv_count"
        android:layout_width="wrap_content"
        android:textColor="@color/matteBlack"
        android:layout_height="wrap_content"
        android:textAppearance="@style/subtitleStyle"
        android:text="15 piece(s)"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/expiration_dialog_til_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:startIconDrawable="@drawable/ic_exp"
        style="@style/commonTextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Expired count"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Please enter the count of the expired products."/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/expiration_dialog_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Submit"
            android:backgroundTint="@color/white"
            android:textColor="@color/purpBlue"
            style="@style/commonCardView.ButtonV2"
            />

        <Button
            android:id="@+id/expiration_dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            style="@style/commonButton.TextButton"/>

    </LinearLayout>

</LinearLayout>