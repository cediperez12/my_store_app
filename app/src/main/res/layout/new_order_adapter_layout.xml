<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shadow_image"
    android:padding="16dp">

    <Button
        android:id="@+id/new_order_adapter_disabled_btn"
        style="@style/commonIconOnlyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:text=""
        app:icon="@drawable/ic_shop_item"
        app:iconSize="36dp"
        app:iconTint="@color/purpBlue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/new_order_adapter_disabled_btn"
        android:layout_toStartOf="@id/new_order_adapter_btn_close"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_order_adapter_txtv_prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product 1"
            android:textAppearance="@style/header2STyle"
            android:textColor="@color/matteBlack" />

        <TextView
            android:id="@+id/new_order_adapter_txtv_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 pieces"
            android:textAppearance="@style/subtitleStyle"
            android:textColor="@color/matteBlack" />

        <TextView
            android:id="@+id/new_order_adapter_txtv_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$240.50"
            android:textAppearance="@style/subtitleStyle"
            android:textColor="@color/purpBlue"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/new_order_adapter_btn_close"
        style="@style/commonIconOnlyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text=""
        app:icon="@drawable/ic_close"
        app:iconTint="@color/purpBlue" />

</RelativeLayout>